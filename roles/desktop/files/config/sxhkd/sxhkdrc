mod1 + ctrl + semicolon
  ~/.config/bspwm/bspwmrc

mod3 + {j, k}
  bspc node {prev, next}.active --focus

mod3 + {h, l}
  bspc monitor {prev, next} --focus

mod3 + mod1 + {j, k}
  bspc node --to-monitor {prev, next}

mod3 + mod1 + Return
  urxvtmux

mod3 + u; mod3 + {u, g, c, r, l, h, t, n, s}
  ~/.config/bspwm/bspwmrc toggle-scratchpad {u, g, c, r, l, h, t, n, s}

mod3 + c
  ~/.config/bspwm/bspwmrc clock

mod3 + mod1 + c
  bspc node --close

mod3 + r
  ~/.config/bspwm/bspwmrc run

mod3 + space
  bspc desktop --layout next

XF86MonBrightnessDown
  sudo brightnessctl set 10%-

XF86MonBrightnessUp
  sudo brightnessctl set +10%

XF86AudioLowerVolume
  pulsemixer --change-volume -10

XF86AudioRaiseVolume
  pulsemixer --change-volume +10

XF86AudioMute
  pulsemixer --toggle-mute

XF86AudioMicMute
  amixer sset Capture toggle
